<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crypto Dashboard</title>
    <%- include("./includes/head.ejs") %>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <%- include("./includes/navbar.ejs") %>

    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-overlay">
        <div class="hero-content">
          <h1>Track Your Cryptocurrency Portfolio</h1>
          <p>
            Stay updated with real-time prices, trends, and market insights.
          </p>
          <a href="#" class="cta-btn">Get Started</a>
        </div>
      </div>
    </section>

    <!-- Main Currencies Section -->
    <section class="main-currencies">
      <h2 class="section-title">Top Currencies</h2>
      <div class="crypto-cards">
        <div class="card">
          <h3>Bitcoin (BTC)</h3>
          <p id="btcCoin"></p>
          <span class="price-change positive" id="btcPer"></span>
          <div class="trend">↑ 1.2% in the last hour</div>
        </div>
        <div class="card">
          <h3>Ethereum (ETH)</h3>
          <p id="ethCoin"></p>
          <span class="price-change negative" id="ethPer"></span>
          <div class="trend">↓ 0.5% in the last hour</div>
        </div>
        <div class="card">
          <h3>Ripple (XRP)</h3>
          <p id="xrpCoin"></p>
          <span class="price-change neutral" id="xrpPer"></span>
          <div class="trend">No significant change</div>
        </div>
      </div>
    </section>

    <!-- Trending Coins Section -->
    <section class="trending-coins">
      <h2 class="section-title">New Listing</h2>
      <div class="trending-cards">
        <!-- Example of a trending coin card -->
        <div class="card">
          <h3>Usual (USUAL)</h3>
          <p id="usualCoin"></p>
          <span class="price-change positive" id="usualPer">+3.5%</span>
        </div>
        <div class="card">
          <h3>Pengu (PENGU)</h3>
          <p id="penguCoin"></p>
          <span class="price-change negative" id="penguPer">-2.1%</span>
        </div>
        <div class="card">
          <h3>Vana (VANA)</h3>
          <p id="vanaCoin"></p>
          <span class="price-change neutral" id="vanaPer">0.0%</span>
        </div>
        <!-- Add more trending coins as necessary -->
      </div>
    </section>

    <!-- Currency Table Section -->
    <section class="currency-table">
      <h2 class="section-title">All Currencies</h2>
      <table class="table">
        <thead>
          <tr>
            <th style="width: 30%">Currency</th>
            <th style="width: 30%">Price</th>
            <th style="width: 30%">24h Change</th>
            <th style="width: 10%">Action</th>
          </tr>
        </thead>
        <tbody>
          <!-- Add more rows as needed -->
        </tbody>
      </table>
    </section>

    <!-- Footer -->
    <footer class="footer">
      <div class="footer-content">
        <p>&copy; 2024 CryptoTracker. All rights reserved.</p>
        <div class="social-links">
          <a href="#" class="social-link">Facebook</a>
          <a href="#" class="social-link">Twitter</a>
          <a href="#" class="social-link">Instagram</a>
        </div>
      </div>
    </footer>

    <%- include("./includes/script.ejs") %>
    <script src="/js/main.js"></script>
  </body>
</html>
